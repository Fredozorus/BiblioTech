<Window x:Class="BiblioTech.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiblioTech"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Height="434" VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Email:" Grid.Row="0" Margin="185,172,574,10"/>
        <TextBox x:Name="txtEmail" Margin="231,180,230,0" VerticalAlignment="Top"/>

        <Label Content="Mot de passe:" Grid.Row="1" Margin="145,10,569,10" />
        <TextBox x:Name="txtPassword" Grid.Row="1" Margin="231,0,230,0" VerticalAlignment="Center"/>

        <Button Content="Connexion" Grid.Row="2" Margin="320,10,320,50" Click="Login_Click"/>
        <Button Content="S'inscrire" Grid.Row="2" Margin="320,50,320,10" Click="Register_Click"/>

    </Grid>
</Window>
