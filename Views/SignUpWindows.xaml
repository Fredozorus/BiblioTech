<Window x:Class="BiblioTech.SignUpWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiblioTech"
        mc:Ignorable="d"
        Title="SignUpWindows" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Nom complet:"  Margin="10,100,702,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFullName" Margin="103,100,197,0" VerticalAlignment="Top"/>

        <Label Content="Email:" Grid.Row="1" Margin="51,0,709,0" VerticalAlignment="Center"/>
        <TextBox  Width="500" x:Name="txtEmail" Grid.Row="1" Margin="103,0,197,0" VerticalAlignment="Center"/>

        <Label Content="Mot de passe:" Grid.Row="2" Margin="10,0,702,0" VerticalAlignment="Center"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="2" Margin="103,0,197,0" VerticalAlignment="Center"/>

        <Button Content="S'inscrire" Grid.Row="3" Margin="250,10,250,10" Click="SignUp_Click" VerticalAlignment="Center"/>

    </Grid>
</Window>
